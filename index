<body>

  <div class="container">
    <h2>Live Sports Games</h2>
    <ul class="game-list">
      <li class="game" data-game="game1" data-stream="https://bit.ly/ddy-m3u1all">Football Match 1</li>
      <li class="game" data-game="game2" data-stream="https://bit.ly/ddy-m3u1all">Football Match 2</li>
      <!-- Add more games here -->
    </ul>
  </div>

  <script>
    const games = document.querySelectorAll('.game');

    games.forEach(game => {
      game.addEventListener('click', (e) => {
        const gameName = e.currentTarget.textContent;
        const streamLink = e.currentTarget.getAttribute('data-stream');
        openMediaPlayer(gameName, streamLink);
      });
    });

    function openMediaPlayer(gameName, streamLink) {
      const player = document.createElement('div');
      player.classList.add('media-player');
      player.innerHTML = `
        <h3>${gameName} - Match Streaming</h3>
        <video id="video-player" controls>
          <source src="${streamLink}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
        <button onclick="toggleFullscreen()">Fullscreen</button>
        <button onclick="toggleSize()">Medium Size</button>
        <button onclick="closePlayer()">Close</button>
      `;

      document.body.appendChild(player);
    }

    function toggleFullscreen() {
      const video = document.getElementById('video-player');
      if (video.requestFullscreen) {
        video.requestFullscreen();
      }
    }

    function toggleSize() {
      const video = document.getElementById('video-player');
      if (video.style.width === "100%") {
        video.style.width = "50%";
      } else {
        video.style.width = "100%";
      }
    }

    function closePlayer() {
      const player = document.querySelector('.media-player');
      if (player) {
        player.remove();
      }
    }
  </script>

</body>
</html>
/index.html
