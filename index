  <title>Sports Streaming</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 80%;
      margin: 0 auto;
      padding: 20px;
    }

    .game-list {
      list-style: none;
      padding: 0;
    }

    .game {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
      cursor: pointer;
      padding: 10px;
      background-color: #007bff;
      color: white;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .game:hover {
      background-color: #0056b3;
    }

    .media-player {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgba(0, 0, 0, 0.8);
      padding: 20px;
      border-radius: 10px;
      z-index: 9999;
      color: white;
      text-align: center;
    }

    .media-player video {
      width: 100%;
      height: auto;
    }

    .media-player button {
      background-color: #007bff;
      border: none;
      color: white;
      padding: 10px;
      margin-top: 10px;
      cursor: pointer;
    }

    .media-player button:hover {
